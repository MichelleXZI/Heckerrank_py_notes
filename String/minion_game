#1. list all combination in string s
s = "Banana"
s = s.upper()
vowels = ['A', 'E', 'I', 'O', 'U']

comb = []
n = len(s)

for i in range(n):
      for j in range(i+1, n+1):
          substring = s[i:j]
          comb.append(substring)
print(comb)

